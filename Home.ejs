<%- include("partials/Header") -%>
<nav class="navbar home">
  <div class="container-fluid">
    <a class="navbar-brand">
      <img
        class="logo-small"
        src="https://i.pinimg.com/originals/40/e7/9c/40e79cd0a43795394c9afc2268b615f0.png"
        alt="Shopping Cart"
        srcset=""
      />
      ShopNow</a
    >
    <form class="d-flex" role="search">
      <input
        class="form-control me-2"
        type="search"
        placeholder="Search"
        style="width: 100%"
        aria-label="Search"
      />
      <button class="btn btn-secondary me-2" type="submit">Checkout</button>
      <form action="/logout" method="get">
        <button type="submit" class="btn btn-primary" type="submit">Logout</button>
      </form>
    </form>
  </div>
</nav>

<div class="container-left py-4">
  <p class="mt-3">Categories</p>
  <ul class="m-2">
    <% categoryList.forEach((item) => { %>
    <li class="p-1 m-1 hover-effect"><%= item["dataValues"]["category"] %></li>
    <% }); %>
  </ul>
</div>

<%- include("partials/Footer") -%>
